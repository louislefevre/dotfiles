" Plugins
" * Gruvbox
" * Airline
" * YouCompleteMe
" * Syntastic
" * GitGutter

" Gruvbox
"colorscheme base16-gruvbox-light-soft
"colorscheme gruvbox
"set background=dark
"set termguicolors

" AirLine
let g:airline_theme='base16_gruvbox_dark_hard'
let g:airline_powerline_fonts = 1
let g:airline_detect_spell = 0
set ttimeoutlen=10

" YouCompleteMe
" let g:syntastic_java_checkers = []

" Syntastic


" GitGutter
"set updatetime=100

" Syntax highlighting
syntax enable

" File types
filetype plugin indent on

" Editor settings
set expandtab
set shiftwidth=4
set tabstop=4
set autoindent
set smartindent
set colorcolumn=120
set nowrap
set number
"set spell
set shell=/bin/bash


