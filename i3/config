##########################################################################################
####################################### DESIGN  ##########################################
# Colour variables
set_from_resource $background background #282828
set_from_resource $foreground foreground #ebdbb2
set_from_resource $color0 color0 #282828
set_from_resource $color1 color1 #cc241d
set_from_resource $color2 color2 #98971a
set_from_resource $color3 color3 #d79921
set_from_resource $color4 color4 #458588
set_from_resource $color5 color5 #b16286
set_from_resource $color6 color6 #689d6a
set_from_resource $color7 color7 #a89984
set_from_resource $color8 color8 #928374
set_from_resource $color9 color9 #fb4934
set_from_resource $color10 color10 #b8bb26
set_from_resource $color11 color11 #fabd2d
set_from_resource $color12 color12 #83a598
set_from_resource $color13 color13 #d3869b
set_from_resource $color14 color14 #8ec07c
set_from_resource $color15 color15 #ebdbb2

# i3
focus_follows_mouse no
for_window [class=".*"] border pixel 4
gaps inner 5
gaps outer -4

# Fonts
font pango:Fira Sans 8

# Borders
# Class                  Border    Background  Text      Indicator
client.focused           $color15  $color15    $color8   $color3
client.focused_inactive  $color7   $color7     $color15  $color7
client.unfocused         $color8   $color8     $color7   $color8


##########################################################################################
####################################### WORKSPACES #######################################
# Workspace variables
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Default workspace screens
workspace $ws1 output DP-0
workspace $ws2 output DP-0
workspace $ws3 output DP-4
workspace $ws4 output DP-4

# Default client workspaces
assign [class="discord"] $ws4
for_window [class="Spotify"] move to workspace $ws4

##########################################################################################
####################################### KEYBINDS #########################################
# Mod key
set $mod Mod4

# PulseAudio
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Move floating windows (use Mouse+$mod to drag)
floating_modifier $mod

# Open terminal
bindsym $mod+Return exec kitty

# Kill window
bindsym $mod+Shift+q kill

# Open program launcher
bindsym $mod+d exec rofi -theme gruvbox-dark-soft -show

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split window horizontally
bindsym $mod+z split h

# Split window vertically
bindsym $mod+v split v

# Fullscreen mode
bindsym $mod+f fullscreen toggle

# Change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Focus the child container
#bindsym $mod+d focus child

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload configuration file
bindsym $mod+Shift+c reload

# Restart i3
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -B 'Yes, exit i3' 'i3-msg exit'"

# Enter resize mode
bindsym $mod+r mode "resize"

# Resize window
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        
        # Pressing right will grow the window’s width.
        bindsym j resize grow height 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        
        # Pressing up will shrink the window’s height.
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        
        # Pressing down will grow the window’s height.
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # Return to normal mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}


##########################################################################################
####################################### STATUS BAR #######################################
bar {
    font pango:Fira Mono, FontAwesome 12
    output primary
    tray_output none
    position top
    workspace_min_width 30
    status_command i3status-rs $HOME/.config/i3status-rust/status.toml
    colors {
        separator #666666
        background $background
        statusline #DDDDDD
        focused_workspace $color3 $color3 $color15
        active_workspace #333333 #333333 $color15
        inactive_workspace #333333 #333333 #888888
        urgent_workspace $color1 $color1 $color15
    }
}

bar {
    font pango: Fira Mono 12
    output DP-4
    tray_output DP-4
    position top
    workspace_min_width 30
    colors {
        separator #666666
        background $background
        statusline #DDDDDD
        focused_workspace $color3 $color3 $color15
        active_workspace #333333 #333333 $color15
        inactive_workspace #333333 #333333 #888888
        urgent_workspace $color1 $color1 $color15
    }
}


####################################### AUTOSTART ########################################
exec --no-startup-id feh --no-fehbg --bg-scale ~/pictures/system-images/background/gruvbox-pacman.png
exec --no-startup-id discord

